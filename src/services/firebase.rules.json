{
  "rules": {
    ".write": "auth != null",
    "boards": {
      "$board_id": {
        ".read": "(!data.child('type').exists()) ||
        					(data.child('type').val() === 'public') ||
        					((data.child('type').val() === 'private') && (auth.uid !== null) && (data.child('members').hasChild(auth.uid)))",
        // ".write": "(data.child('locked').val() == false) ||
        // 					 (data.child('createdBy').val() == auth.uid) ||
        //   				 (root.child('users').child(auth.uid).child('role').val() == 'admin')"
      }
    },
    "lists": {
      ".indexOn": ["board"],
      "$list_id": {
        ".read": "root.child('boards').child(data.child('board').val()).child('type').val() == 'public'"
      },
    },
      
    "items": {
      ".read": "root.child('boards').child(root.child('lists').child(data.child('list').child('type') === 'public'",
      ".indexOn": ["list"],
      "$item_id": {
      },
    },
      
    "users": {
      "$uid": {
        ".read": true,
        // ".write": "(auth != null) &&
        // 					 (auth.uid == $uid) ||
        //   				 (root.child('users').child(auth.uid).child('role').val() == 'admin')"
      }
    }
  }
}